<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <TextView
    android:id="@+id/matchScoreLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/matchScoreLabel"
    android:textSize="42sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/matchScore"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.494"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.692" />

  <TextView
    android:id="@+id/matchScore"
    android:layout_width="220sp"
    android:layout_height="70sp"
    android:text="@string/matchScore"
    android:textAlignment="center"
    android:textSize="42sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.222" />

  <Button
    android:id="@+id/btnThreePointerT1"
    android:layout_width="160sp"
    android:layout_height="50sp"
    android:backgroundTint="#082ec7"
    android:text="@string/threePointer"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/matchScore"
    app:layout_constraintHorizontal_bias="0.237"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btnTwoPointerT1"
    app:layout_constraintVertical_bias="0.17" />

  <Button
    android:id="@+id/btnOnePointT1"
    android:layout_width="160sp"
    android:layout_height="50sp"
    android:backgroundTint="#082ec7"
    android:text="@string/freeThrow"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/matchScore"
    app:layout_constraintHorizontal_bias="0.237"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/matchScore"
    app:layout_constraintVertical_bias="0.194" />

  <TextView
    android:id="@+id/team1Label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/team1Label"
    android:textColor="#082ec7"
    android:textSize="30sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/btnOnePointT1"
    app:layout_constraintEnd_toEndOf="@+id/matchScore"
    app:layout_constraintHorizontal_bias="0.321"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/matchScore" />

  <Button
    android:id="@+id/btnTwoPointerT1"
    android:layout_width="160sp"
    android:layout_height="50sp"
    android:backgroundTint="#082ec7"
    android:text="@string/twoPointer"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/matchScore"
    app:layout_constraintHorizontal_bias="0.224"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btnOnePointT1"
    app:layout_constraintVertical_bias="0.134" />

  <TextView
    android:id="@+id/team2Label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/team2Label"
    android:textColor="#c70808"
    android:textSize="30sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/btnOnePointT2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.725"
    app:layout_constraintStart_toStartOf="@+id/matchScore"
    app:layout_constraintTop_toBottomOf="@+id/matchScore"
    app:layout_constraintVertical_bias="0.49" />

  <Button
    android:id="@+id/btnOnePointT2"
    android:layout_width="160sp"
    android:layout_height="50sp"
    android:backgroundTint="#c70808"
    android:text="@string/freeThrow"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.425"
    app:layout_constraintStart_toEndOf="@+id/btnOnePointT1"
    app:layout_constraintTop_toBottomOf="@+id/matchScore"
    app:layout_constraintVertical_bias="0.197" />

  <Button
    android:id="@+id/btnTwoPointerT2"
    android:layout_width="160sp"
    android:layout_height="50sp"
    android:backgroundTint="#c70808"
    android:text="@string/twoPointer"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.45"
    app:layout_constraintStart_toEndOf="@+id/btnOnePointT1"
    app:layout_constraintTop_toBottomOf="@+id/matchScore"
    app:layout_constraintVertical_bias="0.392" />

  <Button
    android:id="@+id/btnThreePointerT2"
    android:layout_width="160sp"
    android:layout_height="50sp"
    android:backgroundTint="#c70808"
    android:text="@string/threePointer"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.425"
    app:layout_constraintStart_toEndOf="@+id/btnOnePointT1"
    app:layout_constraintTop_toBottomOf="@+id/btnTwoPointerT2"
    app:layout_constraintVertical_bias="0.17" />

  <Button
    android:id="@+id/btnCancelBasket"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#454547"
    android:text="@string/cancelBasket"
    android:textSize="22sp"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btnThreePointerT1"
    app:layout_constraintVertical_bias="0.389" />
</androidx.constraintlayout.widget.ConstraintLayout>